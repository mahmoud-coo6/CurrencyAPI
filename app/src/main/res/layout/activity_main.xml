<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.currencyapi.MainActivity"
    android:padding="8dp">

    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textColor="@android:color/black"
        android:text="From"/>

    <Spinner
        android:id="@+id/from_spiner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_toRightOf="@id/from"/>

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/from"
        android:text="To"/>

    <Spinner
        android:id="@+id/to_spiner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_toRightOf="@id/to"
        android:layout_below="@id/from"/>

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="amount"
        android:textSize="32sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/to"/>

    <EditText
        android:id="@+id/amount_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_toRightOf="@id/amount"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:layout_below="@id/to"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="result"
        android:textSize="32sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/amount"/>

    <EditText
        android:id="@+id/result_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_toRightOf="@id/amount"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:layout_below="@id/amount_edittext"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/result_edittext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Get Result" />
</RelativeLayout>
